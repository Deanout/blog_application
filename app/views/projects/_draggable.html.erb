<% dragActions = "dragstart->drag#dragStart 
                    dragover->drag#dragOver 
                    dragenter->drag#dragEnter
                    drop->drag#drop
                    dragend->drag#dragEnd" %>
<%= content_tag(:div, class: 'bi bi-grip-vertical draggable', draggable: true, data: {
    controller: "drag",
    action: dragActions,
    resource_id: project.id,
    url: "/drag/project",
    parent: "projects",
}) do %>
  <%= render project %>
<% end %>
